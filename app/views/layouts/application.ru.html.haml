!!! 5
%html{:lang => 'ru'}
  %head
    %meta{:charset => 'utf-8'}
    %title Риадо
    <!--[if lt IE 9]><script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script><![endif]-->
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %meta{:name => 'viewport', :content => 'width=device-width, initial-scale=1.0'}
  %body
    .container
      .row
        .span12
          = image_tag('header.jpg')
          .navbar
            .navbar-inner
              %div{:class => ['nav-collapse','collapse']}
                %ul.nav
                  %li= link_to 'Главная', root_path
    .container
      .row
        .span12
          - flash.map do |key,message|
            %div{:class => ['alert',flash_class_for(key)]}
              %button{:type => 'button', :class => 'close', :data => {:dismiss => 'alert'}} ×
              = message
      .row
        #center.span8= yield
        #right.span4
          .well
            %legend Текущий регион
            %p
              - if @current_region
                = image_tag('rf.png')
                %a{:href => '#regions', :data => {:toggle => 'modal'}}= @current_region
              - if @regions
                #regions{:class => ['modal','hide','fade']}
                  .modal-header
                    %h3 Выбор региона
                  .modal-body
                    %ul
                      - @regions.each do |r|
                        %li
                          = link_to r.name, set_current_region_path(r)
            %p
              - if @current_region.acol
                = link_to highlight_acol_prefix(@current_region.acol.name).html_safe, root_path
