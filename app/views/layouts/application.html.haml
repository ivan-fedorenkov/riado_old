!!! 5
%html{:lang => 'ru'}
  %head
    %meta{:charset => 'utf-8'}
    %title Riado
    <!--[if lt IE 9]><script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script><![endif]-->
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %meta{:name => 'viewport', :content => 'width=device-width, initial-scale=1.0'}
  %body
    %div{:class => ['navbar','navbar-fixed-top']}
      .navbar-inner
        .container
          %a{:class => ['btn','btn-navbar'], :data => {:toggle => 'collapse', :target => '.nav-collapse'}}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a{:class => 'brand', :href => '#'} Riado
          %div{:class => ['nav-collapse','collapse']}
            %ul.nav
              %li.active= link_to 'Main page', root_path
    %div{:class => 'container'}
      .row
        .span12
          %div{:class => ['alert','alert-error']}
            %button{:type => 'button', :class => 'close', :data => {:dismiss => 'alert'}} x
            %strong Warning
            Best check yo self, you're not looking good
      .row
        .span8= yield
        .span4
          =form_tag root_path, :class => 'well' do
            =field_set_tag 'Current region' do
              %a{:href => '#region', :data => {:toggle => 'modal'}} Russian Federation
          .well
            %legend Commerce

