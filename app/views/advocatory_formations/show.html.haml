.tabbable
  %ul{:class => ['nav','nav-pills']}
    %li{:class => 'active'}
      %a{:href => "#info", :data => {:toggle => "tab"}} Информация
    %li
      %a{:href => "#structure", :data => {:toggle => "tab"}} Структура
    
  %legend= @advocatory_formation
  
  %div{:class => 'row tab-content'}
    %div{:class => ['tab-pane','active'], :id => "info"}
      .span2
        = image_tag('advocate.jpg', :size => "150x150")
      .span6
        .well
          %p= acol_link_with_bolded_prefix(@advocatory_formation.acol)
          %p= t_form(@advocatory_formation)
          %p= t_info_review_date(@advocatory_formation.updated_at)
          
            
    %div{:class => ['tab-pane'], :id => "structure"}
